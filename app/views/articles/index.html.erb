<div class="px-2 py-4 bg-dark bg-opacity-50">
  <div class="d-flex p-3 justify-content-between align-items-center">
    <h2 class=" text-white fs-4">List of articles</h2>
    <%= link_to "New", new_article_path, class: "btn btn-primary hover-primary text-white" %>
  </div>
  <ul class="d-flex flex-column flex-wrap justify-content-center p-2">
    <% @articles.each do |article| %>
      <% unless article.archived? %>
      <li class="post-container d-flex flex-row m-2 bg-dark text-white" >
        <div class="thumbnail">
          <% if article.thumbnail.attached? %>
            <%= image_tag(article.thumbnail, class: "scale_image") %>
          <% else %> 
          <%= image_tag ("no_image.jpg")%>
          <% end %>
        </div>
        <div class="d-flex flex-column  justify-content-center p-4" style="z-index: 1">
          <h3 class="card-title fs-5 mb-2">
            <strong><%= article.title %></strong> 
          </h3>
          <p class="card-text">
            <%= article.description %>
          </p>
          <%= link_to "Read more...", article %>
        </div>
      </li>
      <% end %>
    <% end %>
  </ul>
</div>
