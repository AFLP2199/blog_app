<div class="d-flex p-2 flex-column text-white bg-dark bg-opacity-50 ">
  <div class="header px-4 pt-4 pb-3">
    <h2 class="text-left fs-1"><%= @article.title %></h2>
    <h2 class="text-left fs-5"><%= @article.description %></h2>
  </div>
  <div class="trix-content px-5 py-2 mx-auto"><%= @article.body %></div>

  <div class="my-2 ms-auto">
    <%= link_to "Edit", edit_article_path, class: "btn btn-success" %>
    <%= link_to "Delete",
    article_path(@article),
    class: "btn btn-danger",
    data: {
      turbo_method: :delete,
      turbo_confirm: "Are you sure?"
    } %>
  </div>
</div>
<div class="d-flex flex-column justify-content-center mt-2 text-white space-bottom">
  <div class="my-2 p-4 bg-dark bg-opacity-50">
    <h3 class="fs-5 mb-4">Add a comment:</h3>
    <%= render 'comments/form' %>
  </div>

  <div class="my-2 p-4 bg-dark bg-opacity-50">
    <h3 class="me-auto fs-5 mb-4">Comments (<%= @article.comments.length - 1 %>)</h3>
    <%= render @article.comments %>
  </div>
</div>
