<div class="d-flex p-4 flex-column align-items-center text-white bg-dark bg-opacity-50">
  <h2><%= @article.title %></h2>
  <p><%= @article.body %></p>

  <div class="ms-auto">
    <%= link_to "Edit", edit_article_path, class: "btn btn-success" %>
    <%= link_to "Delete",
    article_path(@article),
    class: "btn btn-danger",
    data: {
      turbo_method: :delete,
      turbo_confirm: "Are you sure?"
    } %>
  </div>
</div>
<div class="d-flex flex-column justify-content-center my-2 text-white">
  <div class="my-2 p-4 bg-dark bg-opacity-50">
    <h2>Add a comment:</h2>
    <%= form_with model: [ @article, @article.comments.build ] do |form| %>
    <p>
      <%= form.label :commenter, class: "mb-2 form-label" %><br>
      <%= form.text_field :commenter, class: "form-control" %>
    </p>
    <p>
      <%= form.label :body, class: "mb-2 form-label" %><br>
      <%= form.text_area :body, class: "form-control" %>
    </p>
    <p>
      <%= form.submit "Submit Comment", class: "btn btn-primary my-2" %>
    </p>
    <% end %>
  </div>
  <div class="my-2 p-4 bg-dark bg-opacity-50">
    <h3 class="me-auto">Comments: </h2>
    <% @article.comments.each do |comment| %>
      <% if (comment && comment.body) %>
        <div class="p-2 my-2 me-auto bg-white bg-opacity-25 w-100">
            <p>
              <strong><%= comment.commenter %></strong>
           </p>
           <p>
            <%= comment.body %>
          </p>
        </div>
      <% end %>
    <% end %>
</div>
</div>
