<%= form_with model: @article do |form| %>
  <div class="my-2 form-group">
    <%= form.label :thumbnail, class: "mb-2 form-label" %><br>
    <% if @article.thumbnail.attached? %>
      <div class="mx-auto mb-4 bg-dark p-3 thumbnail" style="max-width: 400px; max-height: 100%">
        <%= image_tag(@article.thumbnail) %>
        <div class="mx-auto text-center mt-3 form-group">
            <%= form.label :remove_thumbnail, class: "form-label" %>
            <%= form.check_box :remove_thumbnail, class: "m-2" %> 
          </div>
      </div>
    <% end %>  
    <%= form.file_field :thumbnail, class: "form-control" %>
    <% article.errors.full_messages_for(:thumbnail).each do |message| %>
      <div class="alert alert-danger my-2 p-2"><%= message %></div>
    <% end %>
  </div>
  
  <div class="my-2 form-group">
    <%= form.label :title, class: "mb-2 form-label" %><br>
    <%= form.text_field :title, class: "form-control" %>
    <% article.errors.full_messages_for(:title).each do |message| %>
      <div class="alert alert-danger my-2 p-2"><%= message %></div>
    <% end %>
  </div>

  <div class="my-2 form-group">
    <%= form.label :description, class: "mb-2 form-label" %><br>
    <%= form.text_field :description, class: "form-control" %>
    <% article.errors.full_messages_for(:description).each do |message| %>
      <div class="alert alert-danger my-2 p-2"><%= message %></div>
    <% end %>
  </div>

  <div class="my-2 form-group" >
    <%= form.label :body, class: "mb-2 form-label" %><br>
    <div class="bg-white text-black p-2">
    <%= form.rich_text_area :body %>
    </div>
      <% article.errors.full_messages_for(:body).each do |message| %>
      <div class="alert alert-danger my-2 p-2"><%= message %></div>
      <% end %>
  </div>

  <div class="my-2 form-group">
    <%= form.label :status, 'Visibility', class: "mb-2 form-label" %><br>
    <%= form.select(:status, ['public', 'private', 'archived'], {selected: 'public'}, { :class => 'form-select' }) %>
  </div>

  <div class="my-2">
    <%= form.submit class: "btn btn-primary my-2" %>
  </div>
<% end %>
