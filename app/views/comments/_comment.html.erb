<% if (comment.body && !comment.archived?) %> 
    <div class="p-3 my-2 me-auto bg-dark w-100">
        <p class="p-2 border border-secondary rounded">
            <%= comment.body %>
        </p>
        <div class="d-flex align-items-center ">
            <p class="px-2 f-6">
                <strong><%= comment.commenter %></strong> on <%= comment.created_at.strftime('%B %d, %Y') %>
            </p>
            <p class="mx-2">
                <%= link_to "Delete", [comment.article, comment], data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                }, class: "text-decoration-none" %>
            </p>  
        </div>
    </div>
<% end %> 

